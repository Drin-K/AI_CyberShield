{
  "manifest_version": 3,
  "name": "AI CyberShield",
  "version": "0.2",
  "description": "Detects phishing emails inside Gmail and displays a banner above the email.",
  "permissions": ["activeTab", "scripting", "storage","notifications"],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "PhishDetect",
    "default_icon": "icon128.png"
  }
}
