{
  "manifest_version": 3,
  "name": "PhishDetect Prototype",
  "version": "0.1",
  "description": "Prototype content script that sends email text to local phishing service",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["http://localhost:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "PhishDetect"
  }
}